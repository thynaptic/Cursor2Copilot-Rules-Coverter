{
  "name": "cursorvertext",
  "displayName": "Cursor Rules to Copilot Instructions Converter",
  "description": "Convert Cursor Rules (.mdc files) to VS Code Copilot Instructions with robust YAML parsing and batch processing",
  "version": "1.1.2",
  "publisher": "thynaptic",
  "author": "Thynaptic",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/thynaptic/Cursor2Copilot-Rules-Coverter.git"
  },
  "bugs": {
    "url": "https://github.com/thynaptic/Cursor2Copilot-Rules-Coverter/issues"
  },
  "homepage": "https://github.com/thynaptic/Cursor2Copilot-Rules-Coverter#readme",
  "bin": {
    "convertmdc": "./bin/convertmdc.js",
    "cursor-convert": "./bin/convertmdc.js"
  },
  "files": [
    "bin/",
    "extension.js",
    "convertmdc.py",
    "requirements.txt",
    ".convertmdcrc.dev",
    ".convertmdcrc.prod",
    ".convertmdcrc.preview",
    "Logo_128x128.png",
    "README.md",
    "LICENSE",
    "docs/"
  ],
  "engines": {
    "node": ">=14.0.0",
    "vscode": "^1.75.0"
  },
  "categories": [
    "Other",
    "Formatters"
  ],
  "keywords": [
    "cursor",
    "copilot",
    "conversion",
    "rules",
    "instructions",
    "mdc",
    "ai",
    "code-assistant"
  ],
  "icon": "Logo_128x128.png",
  "activationEvents": [
    "onStartupFinished"
  ],
  "main": "./extension.js",
  "contributes": {
    "commands": [
      {
        "command": "cursorvertext.convertFile",
        "title": "Convert Cursor Rule File",
        "category": "Cursor Rules"
      },
      {
        "command": "cursorvertext.convertFolder",
        "title": "Convert Cursor Rules Folder (Interactive)",
        "category": "Cursor Rules"
      },
      {
        "command": "cursorvertext.convertFromGithub",
        "title": "Convert from GitHub Repository",
        "category": "Cursor Rules"
      },
      {
        "command": "cursorvertext.convertWithPreset",
        "title": "Convert with Preset Configuration",
        "category": "Cursor Rules"
      },
      {
        "command": "cursorvertext.checkUpdate",
        "title": "Check for Updates",
        "category": "Cursor Rules"
      },
      {
        "command": "cursorvertext.openConverterUI",
        "title": "Open Converter UI",
        "category": "Cursor Rules",
        "icon": "$(layout-panel)"
      },
      {
        "command": "cursorvertext.previewConversion",
        "title": "Preview Conversion",
        "category": "Cursor Rules",
        "icon": "$(eye)"
      },
      {
        "command": "cursorvertext.showMdcFiles",
        "title": "Show .mdc Files",
        "category": "Cursor Rules",
        "icon": "$(files)"
      },
      {
        "command": "cursorvertext.convertAll",
        "title": "Convert All .mdc Files",
        "category": "Cursor Rules",
        "icon": "$(fold-down)"
      },
      {
        "command": "cursorvertext.validateMdc",
        "title": "Validate .mdc File",
        "category": "Cursor Rules",
        "icon": "$(check)"
      },
      {
        "command": "cursorvertext.showHistory",
        "title": "Show Conversion History",
        "category": "Cursor Rules",
        "icon": "$(history)"
      },
      {
        "command": "cursorvertext.clearHistory",
        "title": "Clear Conversion History",
        "category": "Cursor Rules"
      },
      {
        "command": "cursorvertext.batchConvert",
        "title": "Batch Convert Files",
        "category": "Cursor Rules",
        "icon": "$(checklist)"
      },
      {
        "command": "cursorvertext.toggleWatchMode",
        "title": "Toggle Watch Mode",
        "category": "Cursor Rules",
        "icon": "$(eye-watch)"
      }
    ],
    "menus": {
      "explorer/context": [
        {
          "when": "resourceExtname == .mdc && !explorerResourceIsFolder",
          "command": "cursorvertext.convertFile",
          "group": "cursorvertext@1"
        },
        {
          "when": "resourceExtname == .mdc && !explorerResourceIsFolder",
          "command": "cursorvertext.previewConversion",
          "group": "cursorvertext@2"
        },
        {
          "when": "resourceExtname == .mdc && !explorerResourceIsFolder",
          "command": "cursorvertext.validateMdc",
          "group": "cursorvertext@3"
        },
        {
          "when": "explorerResourceIsFolder",
          "command": "cursorvertext.convertFolder",
          "group": "cursorvertext@4"
        }
      ],
      "editor/context": [
        {
          "when": "resourceExtname == .mdc",
          "command": "cursorvertext.convertFile",
          "group": "cursorvertext@1"
        },
        {
          "when": "resourceExtname == .mdc",
          "command": "cursorvertext.previewConversion",
          "group": "cursorvertext@2"
        },
        {
          "when": "resourceExtname == .mdc",
          "command": "cursorvertext.validateMdc",
          "group": "cursorvertext@3"
        }
      ],
      "commandPalette": [
        {
          "command": "cursorvertext.convertFile",
          "when": "editorLangId == yaml || resourceExtname == .mdc"
        },
        {
          "command": "cursorvertext.convertFolder"
        },
        {
          "command": "cursorvertext.convertFromGithub"
        },
        {
          "command": "cursorvertext.convertWithPreset"
        },
        {
          "command": "cursorvertext.checkUpdate"
        }
      ]
    },
    "configuration": {
      "title": "Cursor Rules Converter",
      "properties": {
        "cursorvertext.verbose": {
          "type": "boolean",
          "default": false,
          "description": "Enable verbose logging for debugging"
        },
        "cursorvertext.showStats": {
          "type": "boolean",
          "default": true,
          "description": "Display conversion statistics after processing"
        },
        "cursorvertext.autoBackup": {
          "type": "boolean",
          "default": true,
          "description": "Create backups before overwriting existing files"
        },
        "cursorvertext.pythonPath": {
          "type": "string",
          "default": "python3",
          "description": "Path to Python executable (python3, python, or full path)"
        },
        "cursorvertext.defaultPreset": {
          "type": "string",
          "enum": [
            "none",
            "dev",
            "prod",
            "preview"
          ],
          "default": "none",
          "description": "Default preset configuration to use",
          "enumDescriptions": [
            "No preset (use extension settings)",
            "Development mode (verbose + stats)",
            "Production mode (quiet)",
            "Preview mode (dry-run + stats)"
          ]
        },
        "cursorvertext.watchModeEnabled": {
          "type": "boolean",
          "default": false,
          "description": "Automatically convert .mdc files when they are saved"
        },
        "cursorvertext.showStatusBar": {
          "type": "boolean",
          "default": true,
          "description": "Show .mdc file count in status bar"
        },
        "cursorvertext.maxHistoryEntries": {
          "type": "number",
          "default": 50,
          "minimum": 10,
          "maximum": 200,
          "description": "Maximum number of conversion history entries to keep"
        }
      }
    }
  },
  "scripts": {
    "lint": "eslint .",
    "package": "vsce package",
    "publish": "vsce publish"
  },
  "devDependencies": {
    "@types/vscode": "^1.75.0",
    "@types/node": "^18.x",
    "eslint": "^8.x"
  },
  "dependencies": {
    "js-yaml": "^4.1.0"
  },
  "directories": {
    "example": "examples"
  },
  "type": "commonjs"
}
